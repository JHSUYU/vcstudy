  </build>

  <profiles>
    <profile>
      <id>0.x</id>
      <build>
        <resources>

          <resource>
            <directory>instrumentation-config/0.x</directory>
            <includes>
              <include>inst.config</include>
            </includes>
          </resource>
        
          <resource>
            <directory>instrumentation-config/0.x</directory>
            <includes>
              <include>aop.xml</include>
            </includes>
            <targetPath>META-INF</targetPath>
          </resource>
        
        </resources>
      </build>
    </profile>

    <profile>
      <id>2.x</id>
      <build>
        <resources>

          <resource>
            <directory>instrumentation-config/2.x</directory>
            <includes>
              <include>inst.config</include>
            </includes>
          </resource>
        
          <resource>
            <directory>instrumentation-config/2.x</directory>
            <includes>
              <include>aop.xml</include>
            </includes>
            <targetPath>META-INF</targetPath>
          </resource>
        
        </resources>
      </build>
    </profile>

      <profile>
          <id>solr</id>
          <build>
              <finalName>solr-instrumentation-${project.version}</finalName>
              <resources>
                  <resource>
                      <directory>instrumentation-config/solr</directory>
                      <includes>
                          <include>inst.config</include>
                      </includes>
                  </resource>

                  <resource>
                      <directory>instrumentation-config/solr</directory>
                      <includes>
                          <include>aop.xml</include>
                      </includes>
                      <targetPath>META-INF</targetPath>
                  </resource>
              </resources>
          </build>
      </profile>
  </profiles>
